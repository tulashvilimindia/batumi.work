# Environment Configuration for Georgia JobBoard
# Copy this file to .env and update the values

# ======================
# Database Configuration
# ======================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=jobboard
DB_PORT=5432

# ======================
# API Configuration
# ======================
# Admin API key for protected endpoints (use in X-API-Key header)
ADMIN_API_KEY=your-admin-api-key-here

# Secret key for token signing (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here

# Debug mode (true/false)
DEBUG=false

# Environment (development/staging/production)
ENVIRONMENT=production

# CORS origins (JSON array format)
CORS_ORIGINS=["http://localhost", "http://localhost:80"]

# ======================
# Port Configuration
# ======================
API_PORT=8000
WEB_PORT=80

# ======================
# Parser Configuration (Phase 2)
# ======================
# Interval between parser runs (minutes)
PARSER_INTERVAL_MINUTES=60

# Days without seeing a job before marking inactive
NOT_SEEN_DAYS_TO_INACTIVE=7

# Automatically approve parsed jobs (true/false)
AUTO_APPROVE_PARSED_JOBS=true

# Enabled parser sources (comma-separated)
# Available: jobs.ge, hr.ge
ENABLED_SOURCES=jobs.ge,hr.ge

# Regions to parse (comma-separated)
PARSE_REGIONS=batumi,tbilisi

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ======================
# Backup Configuration
# ======================
# Days to retain daily backups
BACKUP_RETENTION_DAYS=7

# ======================
# Monitoring (Sentry)
# ======================
# Sentry DSN (leave empty to disable)
# Get your DSN from: https://sentry.io/
SENTRY_DSN=
# Sample rate for performance traces (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=0.1
# Sample rate for profiling (0.0 to 1.0)
SENTRY_PROFILES_SAMPLE_RATE=0.1

# ======================
# Channel Sender Configuration
# ======================
# Telegram bot token for channel posting (separate from search bot)
CHANNEL_BOT_TOKEN=your-channel-bot-token-here

# Telegram channel ID (username with @ or numeric ID)
TELEGRAM_CHANNEL_ID=@batumiworkofficial

# Sender Admin API port (local access only by default)
SENDER_API_PORT=127.0.0.1:8102

# ======================
# Mailpit (Email Testing)
# ======================
# SMTP host and port for sending reports
SMTP_HOST=mailpit
SMTP_PORT=1025
